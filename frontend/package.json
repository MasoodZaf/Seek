{
  "name": "seek-frontend",
  "version": "1.0.0",
  "description": "Seek - Professional Coding Learning Platform Frontend",
  "private": true,
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.6.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.0.0",
    "react-intersection-observer": "^9.16.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.6.6",
    "socket.io-client": "^4.8.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "axe-core": "^4.8.2",
    "jest-axe": "^8.0.0",
    "lighthouse": "^11.0.0",
    "puppeteer": "^21.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watchAll",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "test:e2e": "node -e \"import('./src/__tests__/e2e/testRunner.js').then(m => m.runE2ETests())\"",
    "test:e2e:user-journeys": "react-scripts test --testPathPattern=userJourneys.test.js --watchAll=false",
    "test:e2e:playground": "react-scripts test --testPathPattern=codePlaygroundJourney.test.js --watchAll=false",
    "test:e2e:dashboard": "react-scripts test --testPathPattern=dashboardJourney.test.js --watchAll=false",
    "test:e2e:mobile": "react-scripts test --testPathPattern=mobileJourney.test.js --watchAll=false",
    "test:e2e:integration": "react-scripts test --testPathPattern=featureIntegration.test.js --watchAll=false",
    "test:e2e:performance": "react-scripts test --testPathPattern=performanceIntegration.test.js --watchAll=false",
    "test:e2e:load": "react-scripts test --testPathPattern=loadTesting.test.js --watchAll=false",
    "test:accessibility": "react-scripts test --testPathPattern=accessibility --watchAll=false",
    "test:performance": "react-scripts test --testPathPattern=performance --watchAll=false",
    "test:mobile": "react-scripts test --testPathPattern=mobile --watchAll=false",
    "test:all": "npm run test:ci && npm run test:e2e",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-results.json --chrome-flags='--headless'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.{js,jsx}",
      "!src/__tests__/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  }
}
